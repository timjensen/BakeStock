<% if object.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-error">
      The form contains <%= pluralize(object.errors.count, "error") %>.
    </div>
    <ul>
    <% object.errors.each do |attr,message| %>
      <li> <%= message %></li>
    <% end %>
    </ul>
  </div>
<% end %>